; **************************************************************************
; * Global options                                                         *
; **************************************************************************

; Debugging stuff (may be useful for troubleshooting)
;foreground = yes
;debug = info
;log = append
;output = /stunnel.log
debug = 0

; **************************************************************************
; * Service defaults may also be specified in individual service sections  *
; **************************************************************************

sslVersion = all
options = NO_SSLv2
options = NO_SSLv3

; **************************************************************************
; * Service definitions                                                    *
; **************************************************************************

; ***************************************** TLS client mode services

[openvpn]
client = yes
accept = 127.0.0.1:1194
connect = {{ stunnel_address }}:{{ stunnel_port }}
verifyPeer = yes
CAfile = C:\Program Files (x86)\stunnel\config\stunnel_server.crt
cert = C:\Program Files (x86)\stunnel\config\stunnel_client_{{ item[0].name }}_crt.pem
key = C:\Program Files (x86)\stunnel\config\stunnel_client_{{ item[0].name }}_key.pem
### 'verifyPeer' - Check the server
### 'CAfile' - To check the server it needs its certificate
### 'cert', 'key' - A certificate and a key are needed to verify the client (verifyPeer) on the server

; vim:ft=dosini
